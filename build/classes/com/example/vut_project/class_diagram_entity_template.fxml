<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="classVBox" onMouseClicked="#onClassDiagramClick" prefHeight="150.0" prefWidth="250.0" style="-fx-border-color: black; -fx-background-color: white;" type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextField fx:id="classNameTextField" alignment="CENTER" onAction="#onClassDiagramNameEnter" onMouseClicked="#onClassDiagramNameClick" promptText="Class Name" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-weight: bold;">
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </TextField>
        <ListView fx:id="entityAttributeView" prefHeight="263.0" prefWidth="198.0">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
            <contextMenu>
                <ContextMenu fx:id="contextMenuOnElement">
                    <items>
                        <MenuItem fx:id="addAttributeContextMenuButton" mnemonicParsing="false" onAction="#onAddAttributeClick" text="Add Attribute" />
                        <MenuItem fx:id="addFunctionDiagramContextMenuButton" mnemonicParsing="false" onAction="#onAddFunctionDiagramClick" text="Add Function" />
                        <MenuItem fx:id="renameAttributeDiagramContextMenuButton" mnemonicParsing="false" onAction="#onRenameAttributeDiagramClick" text="Edit" />
                        <MenuItem fx:id="primaryDiagramClick" mnemonicParsing="false" onAction="#onPrimaryDiagramClick" text="Toggle primary" />
                        <MenuItem fx:id="deleteAttributeContextMenuButton" mnemonicParsing="false" onAction="#onDeleteAttributeClick" text="Delete" />
                        <MenuItem fx:id="addConstraintContextMenuButton" mnemonicParsing="false" onAction="#onAddConstraintClick" text="Add Constraint" />
                        <MenuItem fx:id="pasteConstraintContextMenuButton" mnemonicParsing="false" onAction="#onPasteConstraintClick" text="Paste Constraint" />
                        <MenuItem fx:id="deleteDiagramContextMenuButton" mnemonicParsing="false" onAction="#onDeleteDiagramClick" text="Delete Diagram" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
    </children>
</fx:root>
