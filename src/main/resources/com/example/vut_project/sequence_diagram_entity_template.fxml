<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="sequenceVBox" onMouseClicked="#onSequenceClicked" prefHeight="50.0" prefWidth="150.0" style="-fx-border-color: black; -fx-background-color: white;" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="sequenceDiagramNameTextField" alignment="CENTER" editable="false" onKeyReleased="#onSequenceDiagramNameEntered" onMouseClicked="#onSequenceDiagramNameClick" prefHeight="16.0" prefWidth="148.0" promptText="Class Name" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-weight: bold;">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem fx:id="DeleteSequenceDiagram" mnemonicParsing="false" onAction="#onDeleteSequenceDiagramContextMenuClick" text="Delete Diagram" />
                <MenuItem fx:id="AddLifeLine" mnemonicParsing="false" onAction="#onAddLifeLineContextMenuClick" text="Add Life Line" />
              </items>
            </ContextMenu>
         </contextMenu>
      </TextField>
   </children>
</fx:root>
